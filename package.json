{
  "name": "darkmannn-blog",
  "version": "0.1.0",
  "private": true,
  "description": "Darkmannn's personal blog",
  "scripts": {
    "prepare": "pnpm dlx husky install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "lint-staged": {
    "*": "./scripts/check-commited-file-names.js",
    "*.{ts,tsx}": "eslint --fix --max-warnings=0",
    "*.{js,html,css,scss,json,md,yml,yaml}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "./scripts/check-commit-message.js $HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "next": "12.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "18.0.0",
    "@types/react": "18.0.14",
    "@types/react-dom": "18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "8.18.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.2.5",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "4.7.4"
  },
  "author": "DarkMannn",
  "keywords": [
    "blog",
    "darkmannn"
  ]
}
